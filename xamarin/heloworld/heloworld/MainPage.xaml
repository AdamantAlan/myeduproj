             x:Class="heloworld.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="submit" Clicked="Button_Clicked" BackgroundColor="Aqua" x:DataType="Button" x:Name="submit" HorizontalOptions="Center"></Button>
        <Label Text="Текст до нажатия!" HorizontalOptions="Center" x:Name="labelEvent"></Label>
    </StackLayout>

</ContentPage>
